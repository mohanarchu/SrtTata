<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="7dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="3dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"

            android:text="Customer details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <View

            android:layout_margin="5dp"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="16dp"
                android:textColor="@color/background_black"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textColor="@color/background_black"
                android:text="9698908690"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textColor="@color/background_black"
                    android:text="Pan : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="DXBPM1816F"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textColor="@color/background_black"
                    android:text="Finance option : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Cash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:textStyle="bold"
            android:padding="4dp"
            android:textSize="16dp"
            android:textColor="@color/background_black"
            android:text="Altroz xs - 2020"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textColor="@color/background_black"
                android:text="Color : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textColor="@color/background_black"
                android:text="Exchange : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:padding="4dp"
            android:textSize="16dp"
            android:textColor="@color/background_black"
            android:text="Altroz xs - 2020"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textColor="@color/background_black"
                android:text="Color : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textColor="@color/background_black"
                android:text="Exchange : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="4dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>