<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".CA.CreateCustomerActivity">



    <ImageView
        android:padding="25dp"
        android:id="@+id/imageOfSrt"
        android:src="@drawable/srttata"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>



    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/imageOfSrt"
        android:layout_above="@id/createCus"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:gravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                android:textStyle="bold"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:text="Customer information"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Spinner
                    android:id="@+id/mrOrMs"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/radipous_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </Spinner>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/radipous_1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_height="50dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cusNameInput"
                        android:textColor="@color/black"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textSize="17dp"
                        android:hint="Name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/radipous_1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_height="50dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cusPanInput"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textSize="17dp"

                        android:hint="PAN number"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/radipous_1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/finOptions"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:hint="Finance option"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/radipous_1"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:layout_height="50dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cusMobNumberInput"
                    android:gravity="center|start"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:paddingStart="10dp"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textSize="17dp"
                    android:hint="Mobile number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView

                android:gravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                android:textStyle="bold"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:text="Vehicle details"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/radipous_1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/cusvechileCategory"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:hint="Model"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radipous_1"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/cusVechleModel"
                            android:gravity="center|start"
                            android:layout_gravity="center"
                            android:background="@null"

                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:hint="Variant"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:id="@+id/vechileYear"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/radipous_1"
                        android:layout_width="0dp"
                        android:layout_height="50dp">
                    </androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>



            <LinearLayout

                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/radipous_1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_height="50dp">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cusVechileFuelType"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:hint="Fuel type"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/radipous_1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_height="50dp">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cusVechileTransmission"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:hint="Transmission"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/radipous_1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_height="50dp">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cusVechileColor"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:hint="Colour"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_width="0dp"
                    android:layout_height="50dp">

                    <TextView
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textStyle="bold"
                        android:paddingStart="5dp"
                        android:singleLine="true"
                        android:text="Exchange vehicle"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:hint="Exchange vehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RadioGroup
                        android:layout_marginStart="0dp"
                        android:id="@+id/radioGroupVehicle"
                        android:weightSum="2"
                        android:gravity="center|start"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">


                        <RadioButton
                            android:id="@+id/yes"
                            android:text="Yes"
                            android:layout_weight="1"
                            android:buttonTint="@color/white"
                            android:layout_width="0dp"
                            android:textColor="@color/white"
                            android:layout_height="match_parent"/>

                        <RadioButton
                            android:id="@+id/no"
                            android:textColor="@color/white"
                            android:text="No"
                            android:layout_weight="1"
                            android:buttonTint="@color/white"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <TextView

                android:gravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                android:textStyle="bold"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:text="Billing details"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:id="@+id/createCus"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/light_blues"
        android:layout_width="150dp"
        android:layout_height="36dp">
        <TextView
            android:textSize="17dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Create"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>




</RelativeLayout>