<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".CA.CreateCustomerActivity">





    <ImageView
        android:padding="25dp"
        android:src="@drawable/srttata"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>




    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/mrOrMs"
                android:backgroundTint="@color/white"
                android:background="@drawable/radious"
                android:layout_width="50dp"
                android:layout_height="50dp">


            </Spinner>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="6dp"
                android:background="@drawable/radious"

                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:layout_height="50dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/cusNameInput"
                    android:gravity="center|start"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textSize="17dp"

                    android:hint="Name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/radious"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cusPanInput"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="17dp"

                android:hint="PAN number"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/radious"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cusvechileCategory"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="17dp"

                android:hint="Vechile category"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/radious"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cusVechleModel"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="17dp"

                android:hint="Vechile model"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/radious"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cusExchangeVechile"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="17dp"

                android:hint="Exchange vechile"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/radious"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:layout_height="50dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cusVechileColor"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="17dp"
                android:hint="Vechile colour"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:id="@+id/createCus"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/light_blues"
        android:layout_width="150dp"
        android:layout_height="36dp">
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Create"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </androidx.cardview.widget.CardView>



</RelativeLayout>